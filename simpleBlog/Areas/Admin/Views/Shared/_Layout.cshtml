@using System.Web.Optimization

@helper SelectedTabClass(string tabName)
{
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Softa</title>
    @Styles.Render("~/admin/styles")
</head>
<body>

    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTabClass("posts")"> @*class="@(ViewBag.SelectedTab == "posts" ? "active" : "")"*@
                @Html.ActionLink("Posts", "index", "Posts", new { area = "admin" }, new { })
            </li>

            <li class="@SelectedTabClass("users")">
                @Html.ActionLink("Users", "index", "User", new { area = "admin" }, new { })
            </li>

            <li class="pull-right">
                @Html.RouteLink("Back To Website", "Home")
            </li>
        </ul>

        @RenderBody()


    </div>

    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)

<form class="hidden" id="anti-forgery-form">
    @Html.AntiForgeryToken()
</form>
</body>
</html>